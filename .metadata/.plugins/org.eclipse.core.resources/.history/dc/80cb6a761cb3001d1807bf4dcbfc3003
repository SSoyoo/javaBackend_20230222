package chapter1.D_IO;

import java.util.Scanner;

public class IO {

	public static void main(String[] args) {
		
		//IO : input & Output 입출력! 
		//스캐너가 골치덩어리래 왜지?
		//콘솔을 통해서 개발자로부터 입력을 받을 때 Scanner 라는 객체를 사용
		//콘솔로 데이터를 출력할 때 System 객체를 사용한다. 
		
		//출력 : System.out.println(출력하고 싶은 변수 혹은 상수);
		
		String comment = "이것은 변수에 저장된 문자열입니다";
		System.out.println("이것은 리터럴 상수 문자열입니다");
		System.out.println(comment);
		
//		System.out.println(변수명 혹은 상수);
//		변수혹은 상수자리에 어떤 데이터타입을 넣어도 된다.
		float float1 = 1.11111111111111111111111f;
		System.out.println(float1); 
/*
 * 		입력: Scanner 라는 클래스를쓴다		
 * 		Scanner scanner = new Scanner(System.in);
 */
		Scanner scanner = new Scanner(System.in);
		System.out.println(scanner);
		
		
		
	}

}
