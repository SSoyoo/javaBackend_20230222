package chapter2.D_while;


/*
 * while반복문
 * 일반적으로 반복횟수가 지정되어있지 않을 때 사용하는 반복문이다.
 */



public class While {

	public static void main(String[] args) {
//		while문
//		조건을 검사하고 해당조건이 true일경우 코드 블럭을 실행하는 반복문
//		if문의 반복형태 
//		반복 실행할 코드 블럭이 종료되면 조건을 다시 검사하고 
//		true면 반복, false면 탈출
//		while(조건){실행할 코드}
//		while문을 쓸 때는 조건에 사용할 변수가 while문안에서 변경이 일어나야한다.
//		break : 반복문의 코드블럭을 강제로 종료할 때 사용
//		break 는 일반적으로 조건문과 함께사용
		
		int number = 0; //변수를선언하고
		while(number < 20) { //조건을 검사하고
			System.out.println(number);
			number++; //조건에 사용될 변수를 변경하고 == for문이랑 같음 
			if(number == 200) break;
		}
		
	}

}
