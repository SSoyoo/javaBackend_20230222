package chapter2.A_if;

public class If {
//	if 구문 
//	조건에 따라 실행시키고자 하는 로직이 다들 때 사용하는 구문 
	
	public static void main(String[] args) {
		
//		단순 if문
//		조건이 true일 때 실행할 코드를 지정하는 구문
//		사용방법 if(조건){ 조건이 true일 때 실행할 코드 }
		int age = 12;
		if(age > 19) {
			System.out.println("성인입니다");
			
		}else {
			System.out.println("미성년자입니다");
		}
		
		
		
	}

}
