package chapter1.C_dataType;

public class DataType {
/*
 * 데이터타입
 * 각각의 데이터타입은 자바에서 지정한 여러 종류의 타입이 존재
 * 기본적으로 정수형과 실수형 문자형 논리형이있다.
 * 추가적으로 참조형 데이터타입이 존재한다. 
 * 
 * 일반적으로 특정한 데이터타입으로 정의된 변수 혹은 상수는 
 * 같은 데이터타입의 데이터로만 연산이 가능 
 */
	public static void main(String[] args) {
		
	byte byte1 = 127;
//	byte1 = 128; 범위초과로 오류!
	
	short short1 = -32768;
//	short1 = 32768
	
	int int1 = -2147483648;
	int1 = 2147483647;
//	int1 = 2_147_483_648; 위에거랑 오류가 다름. 
//	정수형 리터럴 상수는 저장되는 공간이 int타입으로 잡힘 그래서 더 큰 범위자체를 표현을 못함 
//리터럴은 인트 범위내에만 ?
	
	System.out.println(int1);
	
	//리터럴 상수도 콤마처럼 쓸수있는데 언더바로 쓰면된다
	
//	long long1 = 12147483647; 리터럴 상수가 이 숫자를 표현을 못해서 !!!!!!
//	리터럴 상수를 롱타입으로 바꿔야함
// 정수타입의 리터럴 상수의 데이터타입은 int 이기때문에 long타입의 리터럴 상수를 지정할때는 리터럴 상수 뒤에 L을 붙여줘야한다! 
	long lon1 = 21474834654648L; //뒤에다가 L을 붙여줘야한다!!!!! 
	
	/*
	 * 실수타입
	 * float type
	 * 4바이트 
	 * 소수점자리 6번자리에서 오차발생
	 * 
	 */
	
//	float float1 = 3.14; 분명실수인데 컴파일에러 타입미스매치! 
//이 리터럴 상수가 정수는  int로 잡혀있음 근데 실수의 리터럴상수 데이터 타입이 더블이라 플롯에 못집어넣음
//실수타입의 리터럴 상수는 double이기때문에 float타입의 리터럴상수를 지정할 땐 리터럴 상수뒤에 F를 붙여준다
	float float1 = 3.14f;
	
	/*
	 * double type
	 * 8바이트
	 * double는 소수점 15자리에서 오차발생
	 */
	
	double double1 = 3.1415;
	
	
	//문자타입 문자를 지정하는데 실제로는 정수가 들어간다
	/*
	 * char type
	 * 2바이트(0~65,535) 크기의 데이터를 가질 수 있는 문자형 데이터 타입
	 * char타입은 문자하나를 저장할 수 있는 공간 단어가 아니다!!!!!!!!!!
	 * 한 문자를 표기할 땐 '' 으로 묶어서 표기한다
	 * 
	 */
	
	char char1 = 'a';
	char char2 = 97; // 97이 a
	System.out.println("cha1: " + char1 +"\n"+ "char2: " + char2);
	
	/*
	 * 논리타입 boolean 
	 * 1바이트(false, true)크기의 데이터를 가질 수 있는 논리형 데이터 타입
	 */
	
	boolean boolean1 = true;
	boolean boolean2 = false;
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	

	}

}
